load("//shared/bazel/rules:cc_rules.bzl", "wpilib_cc_binary", "wpilib_cc_static_and_shared_library", "wpilib_cc_test")
load("//shared/bazel/rules:java_rules.bzl", "wpilib_java_binary", "wpilib_java_library")
load("//shared/bazel/rules:publishing.bzl", "assemble_cpp_library", "assemble_java_library", "bundle_artifacts")

wpilib_cc_static_and_shared_library(
    name = "romiVendordep",
    srcs = glob([
        "src/main/native/cpp/**",
    ]),
    hdrs = glob(["src/main/native/include/**"]),
    strip_include_prefix = "src/main/native/include",
    visibility = ["//visibility:public"],
    wpi_maybe_shared_deps = [
        "//wpilibc:wpilibc",
    ],
)

wpilib_java_library(
    name = "romi-java",
    srcs = glob(["src/main/java/**/*.java"]),
    visibility = ["//visibility:public"],
    deps = [
        "//hal:hal-java",
        "//wpilibj",
    ],
)

wpilib_cc_test(
    name = "romi-test",
    size = "small",
    srcs = glob(["src/test/native/cpp/**"]),
    deps = [
        "//thirdparty/googletest:googletest.static",
    ],
)

wpilib_cc_binary(
    name = "DevMain-Cpp",
    srcs = ["src/dev/native/cpp/main.cpp"],
    deps = [
        "//wpiutil:wpiutil.shared",
    ],
)

wpilib_java_binary(
    name = "DevMain-Java",
    srcs = ["src/dev/java/edu/wpi/first/wpilibj/romi/DevMain.java"],
    main_class = "edu.wpi.first.wpilibj.romi.DevMain",
    deps = [
        "//hal:hal-java",
        "//ntcore:ntcore-java",
        "//wpiutil:wpiutil-java",
    ],
)

assemble_cpp_library(
    base_name = "romiVendordep",
    hdr_directories = ["src/main/native/include"],
    shared_library_pkg_files = "romiVendordep.shared_pkg_files",
    src_directories = ["src/main/native/cpp"],
    static_library_pkg_files = "romiVendordep.static_pkg_files",
)

assemble_java_library(
    base_name = "romiVendordep",
    src_directories = ["src/main/java"],
)

bundle_artifacts(
    name = "romiVendordep-publishing",
    artifacts = [
        ("edu.wpi.first.romiVendordep:romiVendordep-cpp:-headers", "romiVendordep.hdrs_pkg"),
        ("edu.wpi.first.romiVendordep:romiVendordep-cpp:-sources", "romiVendordep.srcs_pkg"),
        ("edu.wpi.first.romiVendordep:romiVendordep-java:-sources", "romiVendordep.java_srcs_pkg"),
        ("edu.wpi.first.romiVendordep:romiVendordep-cpp:-{platform}", "romiVendordep.shared_pkg"),
        ("edu.wpi.first.romiVendordep:romiVendordep-cpp:-{platform}static", "romiVendordep.static_pkg"),
    ],
)
